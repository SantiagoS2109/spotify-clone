---
import Layout from '../layouts/Layout.astro';
import Greeting from '@/components/Greeting.svelte';
import RecentlyPlayed from '@/components/RecentlyPlayed.astro';
import PlayListsSection from '@/components/PlayListsSection.astro';
import Navigation from "@/components/Navigation"

---

<Layout title="Spotify Clone.">
	<div id="playlist-container" class="relative transition-all duration-1000 bg-[#270b0b]">
		<!-- Page Header -->

		<div class="relative z-10 px-6 pt-4">
			<Navigation />

			<Greeting />

			<RecentlyPlayed/>

			<PlayListsSection sectionTitle={"Hecho para ti"}/>
			<!-- <PlayListsSection sectionTitle={"Escuchado recientemente"}/> -->
		</div>

		<!-- DEGRADADO MAIN MENU -->
		<div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80"></div>
	</div>
</Layout>

